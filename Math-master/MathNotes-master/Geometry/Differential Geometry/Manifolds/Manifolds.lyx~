\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{center}
\backslash
begin{tikzpicture}[scale=1/2]
\backslash
begin{axis}[axis lines=none, 
\end_layout

\begin_layout Plain Layout

xmax=1, xmin=-1, ymax=1, ymin=-1, ]
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout


\backslash
addplot [color=red, samples=60] ({0},{x});
\end_layout

\begin_layout Plain Layout


\backslash
addplot [color=red, samples=60] ({x},{0});
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout


\backslash
end{axis}
\backslash
end{tikzpicture}
\backslash
end{center}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
