\backslash
tikztonodes -| ([xshift=-2ex]
\backslash
tikztotarget.west) -- (
\backslash
tikztotarget)}]
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout


\backslash

\backslash
 Ext^i _A (A/I 
\backslash
text{,} U) 
\backslash
arrow[r] & Ext^i _A (A/I 
\backslash
text{,} M) 
\backslash
arrow[d, phantom, ""{coordinate, name=Y}] 
\backslash
