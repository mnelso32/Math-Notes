\begin_layout Plain Layout


\backslash
end{example}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{theorem}
\end_layout

\end_inset

 Let 
\begin_inset Formula $m,k\in\mathbb{Z}$
\end_inset

.
 Then 
\begin_inset Formula $\mathbb{Z}_{m}\times\mathbb{Z}_{k}\cong\mathbb{Z}_{mk}$
\end_inset

 if and only if 
\begin_inset Formula $\mbox{gcd}(m,k)=1$
\end_inset

.
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{theorem}
\end_layout

\end_inset


\end_layout

