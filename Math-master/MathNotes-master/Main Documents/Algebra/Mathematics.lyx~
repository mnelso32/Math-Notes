\begin_layout Standard
If the columns and top two rows are exact, then the bottom row is exact.
 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{prop}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{proof}
\end_layout

\end_inset

 We first show 
\begin_inset Formula $\varphi_{1}''$
\end_inset

 is injective.
 Let 
\begin_inset Formula $u_{1}''\in\ker\varphi_{1}''$
\end_inset

.
 Since 
\begin_inset Formula $\psi_{1}'$
\end_inset

 is surjective (by exactness of first column) we may choose a 
\begin_inset Formula $u_{1}'\in M_{1}'$
\end_inset

 such that 
\begin_inset Formula $\psi_{1}'(u_{1}')=u_{1}''$
\end_inset

.
 Then 
\begin_inset Formula 
\begin{align*}
\psi_{2}'\varphi_{1}'(u_{1}') & =\varphi_{1}''\psi_{1}'(u_{1}')\\
 & =\varphi_{1}''(u_{1}'')\\
 & =0
\end{align*}

\end_inset

implies 
\begin_inset Formula $\varphi_{1}'(u_{1}')\in\ker\psi_{2}'$
\end_inset

.
 Therefore there exists a unique 
\begin_inset Formula $u_{2}\in M_{2}$
\end_inset

 such that 
\begin_inset Formula $\psi_{2}(u_{2})=\varphi_{1}'(u_{1}')$
\end_inset

 (by exac Then
\begin_inset Formula 
\begin{align*}
\psi_{3}\varphi_{2}(u_{2}) & =\varphi_{2}'\psi_{2}(u_{2})\\
 & =\varphi_{2}'\varphi_{1}'(u_{1}')\\
 & =0
\end{align*}

\end_inset

implies 
\begin_inset Formula $\varphi_{2}(u_{2})=0$
\end_inset

 since 
\begin_inset Formula $\psi_{3}$
\end_inset

 is injective (by exactness of third column).
 Thus 
\begin_inset Formula $u_{2}\in\ker\varphi_{2}$
\end_inset

 and so there exists a unique 
\begin_inset Formula $u_{1}\in M_{1}$
\end_inset

 such that 
\begin_inset Formula $\varphi_{1}(u_{1})=u_{2}$
\end_inset

 (by exactness of first row).
 Therefore
\begin_inset Formula 
\begin{align*}
\varphi_{1}'\psi_{1}(u_{1}) & =\psi_{2}\varphi_{1}(u_{1})\\
 & =\psi_{2}(u_{2})\\
 & =\varphi_{1}'(u_{1}')
\end{align*}

\end_inset

implies 
\begin_inset Formula $\psi_{1}(u_{1})=u_{1}'$
\end_inset

 since 
\begin_inset Formula $\varphi_{1}'$
\end_inset

 is injective (by exactness of second row).
 Thus
\begin_inset Formula 
\begin{align*}
u_{1}'' & =\psi_{1}'(u_{1}')\\
 & =\psi_{1}'\psi_{1}(u_{1})\\
 & =0.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset

Now we show 
\begin_inset Formula $\ker\varphi_{2}''=\mathrm{im}\,\varphi_{1}''$
\end_inset

.
 Let 
\begin_inset Formula $u_{2}''\in\ker\varphi_{2}''$
\end_inset

.
 Since 
\begin_inset Formula $\psi_{2}'$
\end_inset

 is surjective (by exactness of second colunn), we may choose a 
\begin_inset Formula $u_{2}'\in M_{2}'$
\end_inset

 such that 
\begin_inset Formula $\psi_{2}'(u_{2}')=u_{2}''$
\end_inset

.
 Then
\begin_inset Formula 
\begin{align*}
\psi_{3}'\varphi_{2}'(u_{2}') & =\varphi_{2}''\psi_{2}'(u_{2}')\\
 & =\varphi_{2}''(u_{2}'')\\
 & =0
\end{align*}

\end_inset

implies 
\begin_inset Formula $\varphi_{2}'(u_{2}')\in\ker\psi_{3}'$
\end_inset

.
 Therefore there exists a unique 
\begin_inset Formula $u_{3}\in M_{3}$
\end_inset

 such that 
\begin_inset Formula $\psi_{3}(u_{3})=\varphi_{2}'(u_{2}')$
\end_inset

 (by exactness of third column).
 Since 
\begin_inset Formula $\varphi_{2}$
\end_inset

 is surjective, we may choose a 
\begin_inset Formula $u_{2}\in M_{2}$
\end_inset

 such that 
\begin_inset Formula $\varphi_{2}(u_{2})=u_{3}$
\end_inset

.
 Then
\begin_inset Formula 
\begin{align*}
\varphi_{2}'(\psi_{2}(u_{2})-u_{2}') & =\varphi_{2}'\psi_{2}(u_{2})-\varphi_{2}'(u_{2}')\\
 & =\psi_{3}\varphi_{2}(u_{2})-\varphi_{2}'(u_{2}')\\
 & =\psi_{3}(u_{3})-\varphi_{2}'(u_{2}')\\
 & =\varphi_{2}'(u_{2}')-\varphi_{2}'(u_{2}')\\
 & =0
\end{align*}

\end_inset

implies 
\begin_inset Formula $\psi_{2}(u_{2})-u_{2}'\in\ker\varphi_{2}'$
\end_inset

.
 Therefore there exists a uniuqe 
\begin_inset Formula $u_{1}'\in M_{1}'$
\end_inset

 such that 
\begin_inset Formula $\varphi_{1}'(u_{1}')=\psi_{2}(u_{2})-u_{2}'$
\end_inset

 (by exactness of second row).
 Therefore
\begin_inset Formula 
\begin{align*}
\varphi_{1}''\psi_{1}'(u_{1}') & =\psi_{2}'\varphi_{1}'(u_{1}')\\
 & =\psi_{2}'(\psi_{2}(u_{2})-u_{2}')\\
 & =\psi_{2}'\psi_{2}(u_{2})-\psi_{2}'(u_{2}')\\
 & =\psi_{2}'(u_{2}')\\
 & =u_{2}''.
\end{align*}

\end_inset

It follows that 
\begin_inset Formula $u_{2}''\in\mathrm{im}\,\varphi_{1}''$
\end_inset

.
 Thus 
\begin_inset Formula $\ker\varphi_{2}''\subseteq\mathrm{im}\,\varphi_{1}''$
\end_inset

.
 For the reverse inclusion, let 
\begin_inset Formula $u_{2}''\in M_{2}''$
\end_inset

.
 Choose 
\begin_inset Formula $u_{1}''\in M_{1}''$
\end_inset

 such that 
\begin_inset Formula $\varphi_{1}''(u_{1}'')=u_{2}''$
\end_inset

.
 Since 
\begin_inset Formula $\psi_{1}'$
\end_inset

 is surjective (by exactness of first column), we may choose a 
\begin_inset Formula $u_{1}'\in M_{1}'$
\end_inset

 such that 
\begin_inset Formula $\psi_{1}'(u_{1}')=u_{1}''$
\end_inset

.
 Then
\begin_inset Formula 
\begin{align*}
0 & =\psi_{3}'\varphi_{2}'\varphi_{1}'(u_{1}')\\
 & =\varphi_{2}''\psi_{2}'\varphi_{1}'(u_{1}')\\
 & =\varphi_{2}''\varphi_{1}''\psi_{1}'(u_{1}')\\
 & =\varphi_{2}''\varphi_{1}''(u_{1}'')\\
 & =\varphi_{2}''(u_{2}'')
\end{align*}

\end_inset

implies 
\begin_inset Formula $u_{2}''\in\ker\varphi_{2}''$
\end_inset

.
 Thus 
\begin_inset Formula $\ker\varphi_{2}''\supseteq\mathrm{im}\,\varphi_{1}''$
\end_inset

.
 
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset

The last step is to show 
\begin_inset Formula $\varphi_{2}''$
\end_inset

 is surjective.
 Let 
\begin_inset Formula $u_{3}''\in M_{3}''$
\end_inset

.
 Since 
\begin_inset Formula $\psi_{3}'$
\end_inset

 is surjective (by exactness of third column), we may choose a 
\begin_inset Formula $u_{3}'\in M_{3}'$
\end_inset

 such that 
\begin_inset Formula $\psi_{3}'(u_{3}')=u_{3}''$
\end_inset

.
 Since 
\begin_inset Formula $\varphi_{2}'$
\end_inset

 is surjective (by exactness of second row), we may choose a 
\begin_inset Formula $u_{2}'\in M_{2}'$
\end_inset

 such that 
\begin_inset Formula $\varphi_{2}'(u_{2}')=u_{3}'$
\end_inset

.
 Then
\begin_inset Formula 
\begin{align*}
\varphi_{2}''\psi_{2}'(u_{2}') & =\psi_{3}'\varphi_{2}'(u_{2}')\\
 & =\psi_{3}'(u_{3}')\\
 & =u_{3}''
\end{align*}

\end_inset

implies 
\begin_inset Formula $\varphi_{2}''$
\end_inset

 is surjective.
 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{proof}
\end_layout

\end_inset


\end_layout

\begin_layout Subsubsection
The Snake Lemma
