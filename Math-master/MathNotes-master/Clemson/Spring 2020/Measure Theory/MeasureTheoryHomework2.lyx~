\begin_layout Plain Layout


\backslash
begin{prop}
\backslash
label{prop}
\end_layout

\end_inset

 Let 
\begin_inset Formula $A,B\in\mathcal{P}(X)$
\end_inset

.
 Then the following properties hold
\end_layout

\begin_layout Enumerate
\begin_inset Formula $A\Delta A=\emptyset$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $(A\Delta B)\Delta C=A\Delta(B\Delta C)$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $(A\Delta B)\Delta(B\Delta C)=A\Delta C$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $(A\Delta B)\Delta(C\Delta D)=(A\Delta C)\Delta(B\Delta D)$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $|1_{A}-1_{B}|=1_{A\Delta B}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{prop}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{proof}
\end_layout

\end_inset


\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hfill
\end_layout

\end_inset


\end_layout

\begin_layout Standard
1.
 We have
\begin_inset Formula 
\begin{align*}
A\Delta A & =(A\backslash A)\cup(A\backslash A)\\
 & =\emptyset\cup\emptyset\\
 & =\emptyset.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hfill
\end_layout

\end_inset


\end_layout

\begin_layout Standard
2.
 We have
\begin_inset Formula 
\begin{align*}
(A\Delta B)\Delta C & =((A\Delta B)\cup C)\cap((A\Delta B)\cap C)^{c}\\
 & =((A\Delta B)\cup C)\cap((A\Delta B)^{c}\cup C^{c})\\
 & =(((A\cup B)\cap(A\cap B)^{c})\cup C))\cap((A\cap B^{c})\cup(A^{c}\cap B))^{c}\cup C^{c})\\
 & =(((A\cup B)\cap(A^{c}\cup B^{c}))\cup C))\cap(((A\cap B^{c})^{c}\cap(A^{c}\cap B)^{c})\cup C^{c})\\
 & =(A\cup B\cup C)\cap(A^{c}\cup B^{c}\cup C)\cap((A^{c}\cup B)\cap(A\cup B^{c}))\cup C^{c})\\
 & =(A\cup B\cup C)\cap(A^{c}\cup B^{c}\cup C)\cap(A^{c}\cup B\cup C^{c})\cap(A\cup B^{c}\cup C^{c})\\
 & =(B\cup C\cup A)\cap(B^{c}\cup C^{c}\cup A)\cap(B^{c}\cup C\cup A^{c})\cap(B\cup C^{c}\cup A^{c})\\
 & =((B\cup C\cup A)\cap(B^{c}\cup C^{c}\cup A))\cap((B^{c}\cup C)\cap(B\cup C^{c}))\cup A^{c})\\
 & =((B\cup C\cup A)\cap(B^{c}\cup C^{c}\cup A))\cap(((B\cap C^{c})^{c}\cap(B^{c}\cap C)^{c})\cup A^{c})\\
 & =(((B\cup C)\cap(B\cap C)^{c})\cup A))\cap((B\cap C^{c})\cup(B^{c}\cap C))^{c}\cup A^{c})\\
 & =((B\Delta C)\cup A)\cap((B\Delta C)^{c}\cup A^{c})\\
 & =((B\Delta C)\cup A)\cap((B\Delta C)\cap A)^{c}\\
 & =(B\Delta C)\Delta A\\
 & =A\Delta(B\Delta C)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hfill
\end_layout

\end_inset


\end_layout

\begin_layout Standard
3.
 We have
\begin_inset Formula 
\begin{align*}
(A\Delta B)\Delta(B\Delta C) & =A\Delta B\Delta B\Delta C\\
 & =A\Delta\emptyset\Delta C\\
 & =A\Delta C.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hfill
\end_layout

\end_inset


\end_layout

\begin_layout Standard
4.
 We have
\begin_inset Formula 
\begin{align*}
(A\Delta B)\Delta(C\Delta D) & =A\Delta B\Delta C\Delta D\\
 & =A\Delta C\Delta B\Delta D\\
 & =(A\Delta C)\Delta(B\Delta D)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
hfill
\end_layout

\end_inset


\end_layout

\begin_layout Standard
5.
 Let 
\begin_inset Formula $x\in X$
\end_inset

.
 If 
\begin_inset Formula $x\notin A\cup B$
\end_inset

, then
\begin_inset Formula 
\begin{align*}
|1_{A}(x)-1_{B}(x)| & =|0-0|\\
 & =0\\
 & =0-0\\
 & =1_{A\cup B}(x)-1_{A\cap B}(x)\\
 & =1_{A\Delta B}(x).
\end{align*}

\end_inset

If 
\begin_inset Formula $x\in A\backslash B$
\end_inset

, then
\begin_inset Formula 
\begin{align*}
|1_{A}(x)-1_{B}(x)| & =|1-0|\\
 & =1\\
 & =1-0\\
 & =1_{A\cup B}(x)-1_{A\cap B}(x)\\
 & =1_{A\Delta B}(x).
\end{align*}

\end_inset

If 
\begin_inset Formula $x\in B\backslash A$
\end_inset

, then
\begin_inset Formula 
\begin{align*}
|1_{A}(x)-1_{B}(x)| & =|0-1|\\
 & =1\\
 & =1-0\\
 & =1_{A\cup B}(x)-1_{A\cap B}(x)\\
 & =1_{A\Delta B}(x).
\end{align*}

\end_inset

If 
\begin_inset Formula $x\in A\cap B$
\end_inset

, then
\begin_inset Formula 
\begin{align*}
|1_{A}(x)-1_{B}(x)| & =|1-1|\\
 & =0\\
 & =1-1\\
 & =1_{A\cup B}(x)-1_{A\cap B}(x)\\
 & =1_{A\Delta B}(x).
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Thus 
\begin_inset Formula $|1_{A}(x)-1_{B}(x)|=1_{A\Delta B}(x)$
\end_inset

 for all 
\begin_inset Formula $x\in X$
\end_inset

 and hence 
\begin_inset Formula $|1_{A}-1_{B}|=1_{A\Delta B}$
\end_inset

.
 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{proof}
\end_layout

\end_inset


