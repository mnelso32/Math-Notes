\begin_body

\begin_layout Title
Probability Exam 2
\end_layout

\begin_layout Author
Michael Nelson
\end_layout

\begin_layout Section*
Problem 1
\end_layout

\begin_layout Subsection*
Problem 1.a
\end_layout

\begin_layout Standard
In order for 
\begin_inset Formula $F(t|\mathbf{X},\eta)$
\end_inset

 to be a proper cdf, we need the following conditions to hold:
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\lim\limits _{t\to-\infty}F(t|\mathbf{X},\eta)=0$
\end_inset

 and 
\begin_inset Formula $\lim\limits _{t\to\infty}F(t|\mathbf{X},\eta)=1$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $F(t|\mathbf{X},\eta)$
\end_inset

 is a nondecreasing function of 
\begin_inset Formula $t$
\end_inset

 
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\lim\limits _{t\to t_{0}^{+}}F(t|\mathbf{X},\eta))=F(t_{0}|\mathbf{X},\eta)$
\end_inset

 for all 
\begin_inset Formula $t_{0}\in\mathbb{R}$
\end_inset


\end_layout

\begin_layout Standard
Let us assume that 
\begin_inset Formula $F(t,\mathbf{X},\eta)$
\end_inset

 is a cdf and see what these three conditions tells us on what properties
 
\begin_inset Formula $\Lambda_{0}(t)$
\end_inset

 has.
 First, property 1 tells us 
\begin_inset Formula 
\begin{align*}
1 & =\lim_{t\to\infty}F(t,\mathbf{X},\eta)\\
 & =\lim_{t\to\infty}\left(1-e^{-\Lambda_{0}(t)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}\right)\\
 & =1-e^{-\lim\limits _{t\to\infty}\Lambda_{0}(t)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}.
\end{align*}

\end_inset

In particular we must have 
\begin_inset Formula $\lim\limits _{t\to\infty}\Lambda_{0}(t)=\infty$
\end_inset

.
 Similarly, property 1 tells us
\begin_inset Formula 
\begin{align*}
0 & =\lim_{t\to-\infty}F(t,\mathbf{X},\eta)\\
 & =\lim_{t\to-\infty}\left(1-e^{-\Lambda_{0}(t)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}\right)\\
 & =1-e^{-\lim\limits _{t\to-\infty}\Lambda_{0}(t)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}.
\end{align*}

\end_inset

In particular we must have 
\begin_inset Formula $\lim\limits _{t\to-\infty}\Lambda_{0}(t)=0$
\end_inset

.
 
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset

Next, property 2 tells us
\begin_inset Formula 
\begin{align*}
t\geq s & \iff F(t|\mathbf{X},\eta)\geq F(s|\mathbf{X},\eta)\\
 & \iff F(t|\mathbf{X},\eta)\geq F(s|\mathbf{X},\eta)\\
 & \iff1-e^{-\Lambda_{0}(t)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}\geq1-e^{-\Lambda_{0}(s)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}\\
 & \iff e^{-\Lambda_{0}(t)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}\leq e^{-\Lambda_{0}(s)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}\\
 & \iff-\Lambda_{0}(t)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta\leq-\Lambda_{0}(s)e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta\\
 & \iff\Lambda_{0}(t)\geq\Lambda_{0}(s).
\end{align*}

\end_inset

In particular, 
\begin_inset Formula $\Lambda_{0}(t)$
\end_inset

 must be a nondecreasing function of 
\begin_inset Formula $t$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset

Finally, property 3 tells us that for any 
\begin_inset Formula $t_{0}\in\mathbb{R}$
\end_inset

, we must have
\begin_inset Formula 
\begin{align*}
1-e^{-\Lambda_{0}(t_{0})e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta} & =F(t_{0}|\mathbf{X},\eta)\\
 & =\lim_{t\to t_{0}^{+}}F(t,\mathbf{X},\eta)\\
 & =\lim_{t\to t_{0}^{+}}\left(1-e^{-\Lambda_{0}(t_{0})e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}\right)\\
 & =1-e^{-\lim\limits _{t\to t_{0}^{+}}\Lambda_{0}(t_{0})e^{\mathbf{X}^{\top}\boldsymbol{\beta}}\eta}
\end{align*}

\end_inset

In particular, 
\begin_inset Formula $\Lambda_{0}(t)$
\end_inset

 must be right continuous too.
 
\end_layout

\begin_layout Subsection*
Problem 1.b
\end_layout

\begin_layout Standard
First note that
\begin_inset Formula 
\begin{align*}
f(t|\mathbf{x},\eta) & =\partial_{t}F(t|\mathbf{x},\eta)\\
 & =\Lambda_{0}'(t)\eta e^{\mathbf{x}^{\top}\boldsymbol{\beta}}e^{-\Lambda_{0}(t)e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\eta}.
\end{align*}

\end_inset

Using this, we calculate
\begin_inset Formula 
\begin{align*}
S(t|\mathbf{x}) & =\int_{t}^{\infty}f(s|\mathbf{x})\mathrm{d}s\\
 & =\int_{t}^{\infty}\int_{0}^{\infty}f(s|\mathbf{x},\eta)f(\eta)\mathrm{d}\eta\mathrm{d}s\\
 & =\frac{1}{\Gamma(\nu)(1/\nu)^{\nu}}\int_{t}^{\infty}\int_{0}^{\infty}\left(\Lambda_{0}'(s)\eta e^{\mathbf{x}^{\top}\boldsymbol{\beta}}e^{-\Lambda_{0}(s)e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\eta}\right)\eta^{\nu-1}e^{-\eta\nu}\mathrm{d}\eta\mathrm{d}s\\
 & =\frac{\nu^{\nu}e^{\mathbf{x}^{\top}\boldsymbol{\beta}}}{\Gamma(\nu)}\int_{t}^{\infty}\Lambda_{0}'(s)\left(\int_{0}^{\infty}\eta^{\nu}e^{-\left(\Lambda_{0}(s)e^{\mathbf{x}^{\top}\boldsymbol{\beta}}+\nu\right)\eta}\mathrm{d}\eta\right)\mathrm{d}s\\
 & =\frac{e^{\mathbf{x}^{\top}\boldsymbol{\beta}}}{\Gamma(\nu)(1/\nu)^{\nu}}\int_{t}^{\infty}\Lambda_{0}'(s)\frac{\Gamma(\nu+1)}{\left(\Lambda_{0}(s)e^{\mathbf{x}^{\top}\boldsymbol{\beta}}+\nu\right)^{\nu+1}}\mathrm{d}s &  & \text{(integral of gamma distribution)}\\
 & =\frac{e^{\mathbf{x}^{\top}\boldsymbol{\beta}}(\nu+1)}{(1/\nu)^{\nu}}\int_{t}^{\infty}\frac{\Lambda_{0}'(s)}{\left(\Lambda_{0}(s)e^{\mathbf{x}^{\top}\boldsymbol{\beta}}+\nu\right)^{\nu+1}}\mathrm{d}s\\
 & =\frac{e^{\mathbf{x}^{\top}\boldsymbol{\beta}}(\nu+1)}{(1/\nu)^{\nu}}\left(\frac{-e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}}{(\nu+1)\left(\Lambda_{0}(s)e^{\mathbf{x}^{\top}\boldsymbol{\beta}}+\nu\right)^{\nu}}\Bigg|_{t}^{\infty}\right)\\
 & =\frac{e^{\mathbf{x}^{\top}\boldsymbol{\beta}}(\nu+1)}{(1/\nu)^{\nu}}\frac{e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}}{(\nu+1)\left(\Lambda_{0}(t)e^{\mathbf{x}^{\top}\boldsymbol{\beta}}+\nu\right)^{\nu}}\\
 & =\left(\frac{\nu}{\Lambda_{0}(t)e^{\mathbf{x}^{\top}\boldsymbol{\beta}}+\nu}\right)^{\nu}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection*
Problem 1.c
\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
f(s_{1},s_{2}) & =\int_{0}^{\infty}f(s_{1},s_{2}|\eta)\mathrm{d}\eta\\
 & =\int_{0}^{\infty}f(s_{1}|\eta)f(s_{2}|\eta)\mathrm{d}\eta\\
 & =\int_{0}^{\infty}\int_{\mathbb{R}^{p}}f(s_{1}|\eta,\mathbf{x})f(s_{2}|\eta,\mathbf{x})f(\mathbf{x})\mathrm{d}\mathbf{x}\mathrm{d}\eta\\
 & =\int_{0}^{\infty}\int_{\mathbb{R}^{p}}\left(\Lambda_{0}'(s_{1})\eta e^{-\Lambda_{0}(s_{1})e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\eta}e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\right)\left(\Lambda_{0}'(s_{2})\eta e^{-\Lambda_{0}(s_{2})e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\eta}e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\right)f(\mathbf{x})\mathrm{d}\mathbf{x}\mathrm{d}\eta\\
 & =\int_{0}^{\infty}\int_{\mathbb{R}^{p}}\Lambda_{0}'(s_{1})\Lambda_{0}'(s_{2})\eta^{2}e^{-(\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\eta}e^{2\mathbf{x}^{\top}\boldsymbol{\beta}}f(\mathbf{x})\mathrm{d}\mathbf{x}\mathrm{d}\eta\\
 & =\int_{\mathbb{R}^{p}}\int_{0}^{\infty}\Lambda_{0}'(s_{1})\Lambda_{0}'(s_{2})\eta^{2}e^{-(\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\eta}e^{2\mathbf{x}^{\top}\boldsymbol{\beta}}f(\mathbf{x})\mathrm{d}\eta\mathrm{d}\mathbf{x}\\
 & =\Lambda_{0}'(s_{1})\Lambda_{0}'(s_{2})\int_{\mathbb{R}^{p}}e^{2\mathbf{x}^{\top}\boldsymbol{\beta}}f(\mathbf{x})\int_{0}^{\infty}\eta^{2}e^{-\left((\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))e^{\mathbf{x}^{\top}\boldsymbol{\beta}}\right)\eta}\mathrm{d}\eta\mathrm{d}\mathbf{x}\\
 & =\Lambda_{0}'(s_{1})\Lambda_{0}'(s_{2})\int_{\mathbb{R}^{p}}e^{2\mathbf{x}^{\top}\boldsymbol{\beta}}f(\mathbf{x})\frac{\Gamma(3)}{(\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))^{3}e^{3\mathbf{x}^{\top}\boldsymbol{\beta}}}\mathrm{d}\mathbf{x} &  & (\text{integral of gamma distribution)}\\
 & =\int_{\mathbb{R}^{p}}\frac{2\Lambda_{0}'(s_{1})\Lambda_{0}'(s_{2})}{(\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))^{3}}e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}f(\mathbf{x})\mathrm{d}\mathbf{x}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
In particular, this implies
\begin_inset Formula 
\[
f(s_{1},s_{2}|\mathbf{x})=\frac{2\Lambda_{0}'(s_{1})\Lambda_{0}'(s_{2})}{(\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))^{3}}e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}.
\]

\end_inset


\end_layout

\begin_layout Standard
Therefore we have
\begin_inset Formula 
\begin{align*}
S(t_{1},t_{2}|\mathbf{x}) & =\int_{t_{2}}^{\infty}\int_{t_{1}}^{\infty}f(s_{1},s_{2}|\mathbf{x})\mathrm{d}s_{1}\mathrm{d}s_{2}\\
 & =\int_{t_{2}}^{\infty}\int_{t_{1}}^{\infty}\frac{2\Lambda_{0}'(s_{1})\Lambda_{0}'(s_{2})}{(\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))^{3}}e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}\mathrm{d}s_{1}\mathrm{d}s_{2}\\
 & =2e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}\int_{t_{2}}^{\infty}\left(\int_{t_{1}}^{\infty}\frac{2\Lambda_{0}'(s_{1})\Lambda_{0}'(s_{2})}{(\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))^{3}}\mathrm{d}s_{1}\right)\mathrm{d}s_{2}\\
 & =2e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}\int_{t_{2}}^{\infty}\left(\frac{-\Lambda_{0}'(s_{2})}{(\Lambda_{0}(s_{1})+\Lambda_{0}(s_{2}))^{2}}\Bigg|_{t_{1}}^{\infty}\right)\mathrm{d}s_{2}\\
 & =2e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}\int_{t_{2}}^{\infty}\frac{\Lambda_{0}'(s_{2})}{(\Lambda_{0}(t_{1})+\Lambda_{0}(s_{2}))^{2}}\mathrm{d}s_{2}\\
 & =e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}\left(\frac{-1}{\Lambda_{0}(t_{1})+\Lambda_{0}(s_{2})}\right)\Bigg|_{t_{2}}^{\infty}\\
 & =e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}\left(\frac{1}{\Lambda_{0}(t_{1})+\Lambda_{0}(t_{2})}\right)\\
 & =\frac{e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}}{\Lambda_{0}(t_{1})+\Lambda_{0}(t_{2})}.
\end{align*}

\end_inset

 
\end_layout

\begin_layout Subsection*
Problem 1.d
\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
\mathrm{E}(\mathrm{sign}((T_{i_{1}}-T_{j_{1}})(T_{i_{2}}-T_{j_{2}})) & =\mathrm{E}\left(\mathrm{E}\left[\mathrm{sign}((T_{i_{1}}-T_{j_{1}})(T_{i_{2}}-T_{j_{2}})|X\right]\right)\\
 & =\mathrm{E}\left(\mathrm{P}[(T_{i1}-T_{j1})(T_{i2}-T_{j2})>0|X]-\mathrm{P}[(T_{i1}-T_{j1})(T_{i2}-T_{j2})<0|X]\right)\\
 & =\mathrm{E}\left(\mathrm{P}[T_{i1}>T_{j1},T_{i2}>T_{j2}|X]+\mathrm{P}[T_{i1}-T_{j1},T_{i2}-T_{j2}<0|X]-\mathrm{P}[(T_{i1}-T_{j1})(T_{i2}-T_{j2})<0|X]\right)\\
 & =\mathrm{E}\left(S(T_{j1},T_{j2}|\mathbf{X}\right)+S(T_{i1},T_{i2}|\mathbf{X})\\
 & =\mathrm{E}\left(\frac{e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}}{\Lambda_{0}(t_{1})+\Lambda_{0}(t_{2})}-\mathrm{P}[(T_{i1}-T_{j1})(T_{i2}-T_{j2})<0|X]\right)\\
\\
\\
 & =\frac{e^{-\mathbf{x}^{\top}\boldsymbol{\beta}}}{\Lambda_{0}(t_{1})+\Lambda_{0}(t_{2})}.
\end{align*}

\end_inset


\end_layout

\begin_layout Section*
Problem 2
\end_layout

\begin_layout Subsection*
Problem 2.a
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\mathcal{A}=\mathrm{supp}\,X=\mathbb{R}_{>0}$
\end_inset

 and define 
\begin_inset Formula $g\colon\mathcal{A}\to\mathbb{R}$
\end_inset

 by
\begin_inset Formula 
\[
g(x)=\frac{2x}{\beta}
\]

\end_inset

for all 
\begin_inset Formula $x\in\mathcal{A}$
\end_inset

.
 Denote 
\begin_inset Formula $\mathcal{B}=\mathrm{im}\,g=\mathbb{R}_{>0}$
\end_inset

 and 
\begin_inset Formula $Y=g(X)$
\end_inset

.
 Then 
\begin_inset Formula $g$
\end_inset

 is a diffeomorphism with inverse 
\begin_inset Formula $h\colon\mathcal{B}\to\mathcal{A}$
\end_inset

 given by
\begin_inset Formula 
\[
h(y)=\frac{\beta y}{2}
\]

\end_inset

for all 
\begin_inset Formula $y\in\mathcal{B}$
\end_inset

.
 The absolute value of the derivative of 
\begin_inset Formula $h$
\end_inset

 at 
\begin_inset Formula $y\in\mathcal{B}$
\end_inset

 is given by
\begin_inset Formula 
\begin{align*}
\left|\frac{\mathrm{d}}{\mathrm{d}y}h(y)\right| & =\left|\frac{\beta}{2}\right|\\
 & =\frac{\beta}{2}
\end{align*}

\end_inset

It follows that 
\begin_inset Formula 
\begin{align*}
f_{Y}(y) & =f_{X}(h(y))\frac{\beta}{2}\\
 & =\frac{1}{\Gamma(\alpha)\beta^{\alpha}2^{\alpha-1}}\beta^{\alpha-1}y^{\alpha-1}e^{-\frac{(\beta y/2)}{\beta}}\frac{\beta}{2}\\
 & =\frac{1}{\Gamma(\alpha)2^{\alpha}}y^{\alpha-1}e^{-\frac{y}{2}}.
\end{align*}

\end_inset

Therefore 
\begin_inset Formula $Y\sim\chi_{2\alpha}^{2}$
\end_inset

.
 
\end_layout

\begin_layout Subsection*
Problem 2.b
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\mathcal{A}=\mathrm{supp}\,(X_{1},X_{2})=\mathbb{R}_{>0}^{2}$
\end_inset

 and define 
\begin_inset Formula $g=(g_{1},g_{2})\colon\mathcal{A}\to\mathbb{R}^{2}$
\end_inset

 by
\begin_inset Formula 
\[
g_{1}(x_{1},x_{2})=\frac{\alpha_{1}\beta_{2}x_{1}}{\alpha_{2}\beta_{1}x_{2}}\qquad\text{and}\qquad g_{2}(x_{1},x_{2})=x_{2}
\]

\end_inset

for all 
\begin_inset Formula $(x_{1},x_{2})\in\mathcal{A}$
\end_inset

.
 Denote 
\begin_inset Formula $\mathcal{B}=\mathrm{im}\,g=\mathbb{R}_{>0}^{2}$
\end_inset

, 
\begin_inset Formula $Y_{1}=g_{1}(X_{1},X_{2})$
\end_inset

, and 
\begin_inset Formula $Y_{2}=g_{2}(X_{1},X_{2})$
\end_inset

.
 Then 
\begin_inset Formula $g$
\end_inset

 is a diffeomorphism with inverse 
\begin_inset Formula $h=(h_{1},h_{2})\colon\mathcal{B}\to\mathcal{A}$
\end_inset

 given by
\begin_inset Formula 
\[
h_{1}(y_{1},y_{2})=\frac{\alpha_{2}\beta_{1}}{\alpha_{1}\beta_{2}}y_{1}y_{2}\qquad\text{and}\qquad h_{2}(y_{1},h_{2})=y_{2}
\]

\end_inset

for all 
\begin_inset Formula $(y_{1},y_{2})\in\mathcal{B}$
\end_inset

.
 The absolute value of the Jacobian of 
\begin_inset Formula $h$
\end_inset

 at 
\begin_inset Formula $(y_{1},y_{2})\in\mathcal{B}$
\end_inset

 is given by
\begin_inset Formula 
\begin{align*}
\left|J_{(y_{1},y_{2})}(h)\right| & =\left|\det\begin{pmatrix}\frac{\alpha_{2}\beta_{1}}{\alpha_{1}\beta_{2}}y_{2} & \frac{\alpha_{2}\beta_{1}}{\alpha_{1}\beta_{2}}y_{1}\\
0 & 1
\end{pmatrix}\right|\\
 & =\frac{\alpha_{2}\beta_{1}}{\alpha_{1}\beta_{2}}y_{2}.
\end{align*}

\end_inset

Thus the joint distribution of 
\begin_inset Formula $Y_{1}$
\end_inset

 and 
\begin_inset Formula $Y_{2}$
\end_inset

 is given by
\begin_inset Formula 
\begin{align*}
f_{Y_{1},Y_{2}}(y_{1},y_{2}) & =f_{X_{1},X_{2}}(h(y_{1},y_{2}))\left|J_{(y_{1},y_{2})}(h)\right|\\
 & =\frac{1}{\Gamma(\alpha_{1})\Gamma(\alpha_{2})\beta_{1}^{\alpha_{1}}\beta_{2}^{\alpha_{2}}}x_{1}^{\alpha_{1}-1}x_{2}^{\alpha_{2}-1}e^{-\frac{x_{1}}{\beta_{1}}}e^{-\frac{x_{2}}{\beta_{2}}}\frac{\alpha_{1}\beta_{2}}{\alpha_{2}\beta_{1}}y_{2}\\
\\
 & =\frac{1}{\Gamma(\alpha_{1})\Gamma(\alpha_{2})\beta_{1}^{\alpha_{1}}\beta_{2}^{\alpha_{2}}}\left(\frac{\alpha_{2}^{\alpha_{1}-1}\beta_{1}^{\alpha_{1}-1}}{\alpha_{1}^{\alpha_{1}-1}\beta_{2}^{\alpha_{1}-1}}y_{1}^{\alpha_{1}-1}y_{2}^{\alpha_{1}-1}\right)\left(y_{2}^{\alpha_{2}-1}\right)\left(e^{-\frac{1}{\beta_{1}}\frac{\alpha_{2}\beta_{1}}{\alpha_{1}\beta_{2}}y_{1}y_{2}}\right)\left(e^{-\frac{y_{2}}{\beta_{2}}}\right)\frac{\alpha_{2}\beta_{1}}{\alpha_{1}\beta_{2}}y_{2}\\
\\
 & =\frac{1}{\Gamma(\alpha_{1})\Gamma(\alpha_{2})\beta_{1}^{\alpha_{1}}\beta_{2}^{\alpha_{2}}}\left(\frac{\alpha_{2}^{\alpha_{1}-1}\beta_{1}^{\alpha_{1}-1}}{\alpha_{1}^{\alpha_{1}-1}\beta_{2}^{\alpha_{1}-1}}y_{1}^{\alpha_{1}-1}y_{2}^{\alpha_{1}-1}\right)\left(y_{2}^{\alpha_{2}-1}\right)\left(e^{-\frac{\alpha_{2}}{\alpha_{1}\beta_{2}}y_{1}y_{2}}\right)\left(e^{-\frac{y_{2}}{\beta_{2}}}\right)\frac{\alpha_{2}\beta_{1}}{\alpha_{1}\beta_{2}}y_{2}\\
\\
 & =\frac{\alpha_{2}^{\alpha_{1}}y_{1}^{\alpha_{1}-1}y_{2}^{\alpha_{1}+\alpha_{2}-1}}{\alpha_{1}^{\alpha_{1}}\Gamma(\alpha_{1})\Gamma(\alpha_{2})\beta_{2}^{\alpha_{2}+\alpha_{1}}}e^{-\left(\frac{\alpha_{2}}{\alpha_{1}\beta_{2}}y_{1}y_{2}+\frac{1}{\beta_{2}}y_{2}\right)}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Therefore the marginal distribution of 
\begin_inset Formula $Y_{1}$
\end_inset

 is given by
\begin_inset Formula 
\begin{align*}
f_{Y_{1}}(y_{1}) & =\int_{0}^{\infty}f_{Y_{1},Y_{2}}(y_{1},y_{2})\mathrm{d}y_{2}\\
 & =\int_{0}^{\infty}\frac{\alpha_{2}^{\alpha_{1}}y_{1}^{\alpha_{1}-1}y_{2}^{\alpha_{1}+\alpha_{2}-1}}{\alpha_{1}^{\alpha_{1}}\Gamma(\alpha_{1})\Gamma(\alpha_{2})\beta_{2}^{\alpha_{2}+\alpha_{1}}}e^{-\left(\frac{\alpha_{2}}{\alpha_{1}\beta_{2}}y_{1}y_{2}+\frac{1}{\beta_{2}}y_{2}\right)}\mathrm{d}y_{2}\\
 & =\frac{\alpha_{2}^{\alpha_{1}}y_{1}^{\alpha_{1}-1}}{\alpha_{1}^{\alpha_{1}}\Gamma(\alpha_{1})\Gamma(\alpha_{2})\beta_{2}^{\alpha_{2}+\alpha_{1}}}\int_{0}^{\infty}y_{2}^{\alpha_{1}+\alpha_{2}-1}e^{-\left(\frac{\alpha_{2}y_{1}+\alpha_{1}}{\alpha_{1}\beta_{2}}y_{2}\right)}\mathrm{d}y_{2}\\
 & =\frac{\alpha_{2}^{\alpha_{1}}y_{1}^{\alpha_{1}-1}}{\alpha_{1}^{\alpha_{1}}\Gamma(\alpha_{1})\Gamma(\alpha_{2})\beta_{2}^{\alpha_{2}+\alpha_{1}}}\int_{0}^{\infty}\left(\frac{\alpha_{1}\beta_{2}}{\alpha_{2}y_{1}+\alpha_{1}}\right)^{\alpha_{1}+\alpha_{2}-1}u^{\alpha_{1}+\alpha_{2}-1}e^{-u}\frac{\alpha_{1}\beta_{2}}{\alpha_{2}y_{1}+\alpha_{1}}\mathrm{d}u & u\text{-substitution }u=\frac{\alpha_{2}y_{1}+\alpha_{1}}{\alpha_{1}\beta_{2}}y_{2}\\
 & =\frac{\alpha_{1}^{\alpha_{2}}\alpha_{2}^{\alpha_{1}}y_{1}^{\alpha_{1}-1}}{\Gamma(\alpha_{1})\Gamma(\alpha_{2})(\alpha_{2}y_{1}+\alpha_{1})^{\alpha_{1}+\alpha_{2}}}\int_{0}^{\infty}u^{\alpha_{1}+\alpha_{2}-1}e^{-u}\mathrm{d}u\\
 & =\frac{\Gamma(\alpha_{1}+\alpha_{2})\alpha_{1}^{\alpha_{2}}\alpha_{2}^{\alpha_{1}}y_{1}^{\alpha_{1}-1}}{\Gamma(\alpha_{1})\Gamma(\alpha_{2})(\alpha_{2}y_{1}+\alpha_{1})^{\alpha_{1}+\alpha_{2}}}.
\end{align*}

\end_inset

Thus 
\begin_inset Formula $Y_{1}\sim\mathrm{F}(2\alpha_{1},2\alpha_{2})$
\end_inset

.
\end_layout

\begin_layout Subsection*
Problem 2.c
\end_layout

\begin_layout Standard
First we prove the following:
\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{prop}
\backslash
label{prop}
\end_layout

\end_inset

 Let 
\begin_inset Formula $Z=\sum_{i=1}^{n}X_{i}$
\end_inset

 where for 
\begin_inset Formula $1\leq i\leq n$
\end_inset

 we have 
\begin_inset Formula $X_{i}\sim\mathrm{exponential}(\beta)$
\end_inset

 with 
\begin_inset Formula $X_{i}$
\end_inset

 and 
\begin_inset Formula $X_{j}$
\end_inset

 being independent for all 
\begin_inset Formula $1\leq i<j\leq n$
\end_inset

, then 
\begin_inset Formula $Z\sim\Gamma(n,\beta)$
\end_inset

.
 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{prop}
\end_layout

\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{proof}
\end_layout

\end_inset

 Let 
\begin_inset Formula $\mathcal{A}=\mathrm{supp}\,(X_{1},\dots,X_{n})=\mathbb{R}_{>0}^{n}$
\end_inset

 and define 
\begin_inset Formula $g=(g_{1},\dots,g_{n})\colon\mathcal{A}\to\mathbb{R}^{n}$
\end_inset

 by
\begin_inset Formula 
\[
g_{1}(x_{1},\dots,x_{n})=\sum_{i=1}^{n}x_{i}\qquad\text{and}\qquad g_{k}(x_{1},\dots,x_{n})=x_{k}
\]

\end_inset

for all 
\begin_inset Formula $2\leq k\leq n$
\end_inset

 and 
\begin_inset Formula $(x_{1},\dots,x_{n})\in\mathcal{A}$
\end_inset

.
 Denote 
\begin_inset Formula $\mathcal{B}=\mathrm{im}\,g=\{(y_{1},\dots,y_{n})\in\mathbb{R}_{>0}^{n}\mid y_{1}>\sum_{i=2}^{n}y_{i}\}$
\end_inset

 and 
\begin_inset Formula $Y_{j}=g_{j}(X_{1},\dots,X_{n})$
\end_inset

 for all 
\begin_inset Formula $1\leq j\leq n$
\end_inset

.
 Then 
\begin_inset Formula $g$
\end_inset

 is a diffeomorphism with inverse 
\begin_inset Formula $h=(h_{1},\dots,h_{n})\colon\mathcal{B}\to\mathcal{A}$
\end_inset

 given by
\begin_inset Formula 
\[
h_{1}(y_{1},\dots,y_{n})=y_{1}-\sum_{i=2}^{n}y_{i}\qquad\text{and}\qquad h_{k}(y_{1},\dots,y_{n})=y_{k}
\]

\end_inset

for all 
\begin_inset Formula $2\leq k\leq n$
\end_inset

 and 
\begin_inset Formula $(y_{1},\dots,y_{n})\in\mathcal{B}$
\end_inset

.
 The absolute value of the Jacobian of 
\begin_inset Formula $h$
\end_inset

 at 
\begin_inset Formula $(y_{1},\dots,y_{n})\in\mathcal{B}$
\end_inset

 is given by
\begin_inset Formula 
\begin{align*}
\left|J_{(y_{1},\dots,y_{n})}(h)\right| & =\left|\det\begin{pmatrix}1 & -1 & \cdots & -1 & -1\\
0 & 1 & 0 & \cdots & 0\\
\vdots & \ddots & \ddots & \ddots & \vdots\\
0 & \ddots & \ddots & \ddots & 0\\
0 & \cdots & \cdots & 0 & 1
\end{pmatrix}\right|\\
 & =1.
\end{align*}

\end_inset

Thus the joint distribution of 
\begin_inset Formula $(Y_{1},\dots,Y_{n})$
\end_inset

 is
\begin_inset Formula 
\begin{align*}
f_{Y_{1},\dots,Y_{n}}(y_{1},\dots,y_{n}) & =f_{X_{1},\dots,X_{n}}(h(y_{1},\dots,y_{n}))\left|J_{(y_{1},\dots,y_{n})}(h)\right|\\
 & =\frac{1}{\beta}e^{-\frac{y_{1}-\sum_{i=2}^{n}y_{i}}{\beta}}\prod_{2=1}^{n}\frac{1}{\beta}e^{-\frac{y_{i}}{\beta}}\\
 & =\frac{1}{\beta}e^{\frac{-y_{1}+\sum_{i=2}^{n}y_{i}}{\beta}}\prod_{2=1}^{n}\frac{1}{\beta}e^{\frac{-y_{i}}{\beta}}\\
 & =\frac{1}{\beta^{n}}e^{-\frac{y_{1}}{\beta}}
\end{align*}

\end_inset

Therefore the marginal distribution of 
\begin_inset Formula $Y_{1}$
\end_inset

 is
\begin_inset Formula 
\begin{align*}
f_{Y_{1}}(y_{1}) & =\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-1}}f_{Y_{1},\dots,Y_{n}}(y_{1},\dots,y_{n})\mathrm{d}y_{n}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2}\\
 & =\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-1}}\frac{1}{\beta^{n}}e^{\frac{-y_{1}}{\beta}}\mathrm{d}y_{n}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2}\\
 & =\frac{1}{\beta^{n}}e^{\frac{-y_{1}}{\beta}}\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-1}}\mathrm{d}y_{n}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2}\\
 & =\frac{1}{\beta^{n}}e^{\frac{-y_{1}}{\beta}}\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-1}}\mathrm{d}y_{n}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2}\\
 & =\frac{1}{\Gamma(n)}\frac{1}{\beta^{n}}y_{1}^{n-1}e^{\frac{-y_{1}}{\beta}}
\end{align*}

\end_inset

where the integral in the fourth line is solved as follows:
\begin_inset Formula 
\begin{align*}
\int_{0}^{y_{1}} & \int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-1}}\mathrm{d}y_{n}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2} & k=1\\
 & =\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-2}}(y_{1}-y_{2}-\cdots-y_{n-1})\mathrm{d}y_{n-1}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2} & k=1\\
 & =\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-3}}\frac{1}{2}(y_{1}-y_{2}-\cdots-y_{n-1})^{2}\Big|_{0}^{y_{1}-y_{2}-\cdots-y_{n-2}}\mathrm{d}y_{n-2}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2}\\
 & =\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-3}}\frac{1}{2}(y_{1}-y_{2}-\cdots-y_{n-2})^{2}\mathrm{d}y_{n-2}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2}\\
 & \vdots\\
 & =\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-k-1}}\frac{1}{k!}(y_{1}-y_{2}-\cdots-y_{n-k})^{k}\mathrm{d}y_{n-k}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2} & 1\leq k\leq n-2\\
 & =\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-k-2}}\frac{1}{(k+1)!}(y_{1}-y_{2}-\cdots-y_{n-k})^{k+1}\Big|_{0}^{y_{1}-y_{2}-\cdots-y_{n-k+1}}\mathrm{d}y_{n-k}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2}\\
 & =\int_{0}^{y_{1}}\int_{0}^{y_{1}-y_{2}}\cdots\int_{0}^{y_{1}-y_{2}-\cdots-y_{n-k-2}}\frac{1}{(k+1)!}(y_{1}-y_{2}-\cdots-y_{n-k-11})^{k+1}\mathrm{d}y_{n-k+1}\cdots\mathrm{d}y_{3}\mathrm{d}y_{2}\\
 & \vdots\\
 & =\int_{0}^{y_{1}}\frac{1}{(n-2)!}(y_{1}-y_{2})^{n-1}\mathrm{d}y_{2} & k=n-2\\
 & =\frac{1}{(n-1)!}y_{1}^{n-1}.\\
 & =\frac{1}{\Gamma(n)}y_{1}^{n-1}.
\end{align*}

\end_inset

Therefore 
\begin_inset Formula $Z=Y_{1}\sim\Gamma(n,\beta)$
\end_inset

.
 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{proof}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset


\begin_inset space ~
\end_inset

Now with the proposition above established, the problem is easy.
 We simply compose the map with the one given in the proposition above with
 the one in the previous problem.
 Thus the sequence of maps
\begin_inset Formula 
\begin{align*}
(X_{1},\dots,X_{n},Y_{1},\dots,Y_{m}) & \mapsto\left(\sum_{i=1}^{n}X_{i},\sum_{j=1}^{m}Y_{j}\right)\\
 & \mapsto\frac{n\beta}{m\beta}\frac{\sum_{i=1}^{n}X_{i}}{\sum_{j=1}^{m}Y_{j}}\\
 & \mapsto\frac{n}{m}\frac{\sum_{i=1}^{n}X_{i}}{\sum_{j=1}^{m}Y_{j}}\\
 & =\frac{\overline{X}}{\overline{Y}}
\end{align*}

\end_inset

gives us an 
\begin_inset Formula $\mathrm{F}(2n,2m)$
\end_inset

 distribution.
\end_layout

\begin_layout Section*
Problem 3
\end_layout

\begin_layout Subsection*
Problem 3.a
\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
\mathrm{E}(X_{1}) & =\mathrm{E}\left(\mathrm{E}[X_{1}|\mu,\sigma^{2}]\right)\\
 & =\mathrm{E}(\mu)\\
 & =\mathrm{E}\left(\mathrm{E}(\mu|\sigma^{2})\right)\\
 & =\mathrm{E}(\mu_{0}\sigma^{2})\\
 & =\mu_{0}\mathrm{E}(\sigma^{2})\\
 & =\mu_{0}\frac{\nu_{0}\sigma_{0}^{2}/2}{\nu_{0}/2-1}\\
 & =\frac{\mu_{0}\nu_{0}\sigma_{0}^{2}}{\nu_{0}-2}.
\end{align*}

\end_inset

Next, we have
\begin_inset Formula 
\begin{align*}
\mathrm{Var}\,X_{1} & =\mathrm{E}\left(\mathrm{Var}(X_{1}|\mu,\sigma^{2})\right)+\mathrm{Var}\left(\mathrm{E}(X_{1}|\mu,\sigma^{2})\right)\\
 & =\mathrm{E}(\sigma^{2})+\mathrm{Var}(\mu)\\
 & =\frac{\nu_{0}\sigma_{0}^{2}}{\nu_{0}-2}+\mathrm{E}\left(\mathrm{Var}(\mu|\sigma^{2})\right)+\mathrm{Var}\left(\mathrm{E}(\mu|\sigma^{2})\right)\\
 & =\frac{\nu_{0}\sigma_{0}^{2}}{\nu_{0}-2}+\mathrm{E}\left(\sigma^{2}/n_{0}\right)+\mathrm{Var}(\mu_{0})\\
 & =\frac{\nu_{0}\sigma_{0}^{2}}{\nu_{0}-2}+\frac{\nu_{0}\sigma_{0}^{2}}{n_{0}(\nu_{0}-2)}.
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection*
Problem 3.b
\end_layout

\begin_layout Standard
To simplify our notation in what follows, denote 
\begin_inset Formula $\alpha=\nu_{0}/2$
\end_inset

 and 
\begin_inset Formula $\beta=\nu_{0}\sigma_{0}^{2}/2$
\end_inset

.
 Observe that the joint distribution of 
\begin_inset Formula $X_{i}$
\end_inset

, 
\begin_inset Formula $\mu$
\end_inset

, and 
\begin_inset Formula $\sigma^{2}$
\end_inset

 is given by
\begin_inset Formula 
\begin{align*}
f(x,\mu,\sigma^{2}) & =f(x|\mu,\sigma^{2})f(\mu,\sigma^{2})\\
 & =f(x|\mu,\sigma^{2})f(\mu|\sigma^{2})f(\sigma^{2})\\
 & =\left(\frac{1}{\sigma\sqrt{2\pi}}e^{-\frac{1}{2\sigma^{2}}(x-\mu)^{2}}\right)\left(\frac{\sqrt{n_{0}}}{\sigma\sqrt{2\pi}}e^{\frac{-1}{2\sigma^{2}}n_{0}(\mu-\mu_{0})^{2}}\right)\left(\frac{\beta^{\alpha}}{\Gamma(\alpha)}(\sigma^{2})^{-\alpha-1}e^{-\beta/\sigma^{2}}\right)\\
 & =\frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)2\pi}(\sigma^{2})^{-\alpha-2}e^{-\frac{1}{2\sigma^{2}}\left((x-\mu)^{2}+n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}.
\end{align*}

\end_inset

Therefore the distribution of 
\begin_inset Formula $\mu|X_{i},\sigma^{2}$
\end_inset

 is
\begin_inset Formula 
\begin{align*}
f(\mu|x,\sigma^{2}) & =\int_{0}^{\infty}\int_{-\infty}^{\infty}f(x,\mu,\sigma^{2})\mathrm{d}x\mathrm{d}\sigma^{2}\\
 & =\frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)2\pi}\int_{0}^{\infty}\int_{-\infty}^{\infty}(\sigma^{2})^{-\alpha-2}e^{-\frac{1}{2\sigma^{2}}\left((x-\mu)^{2}+n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}\mathrm{d}x\mathrm{d}\sigma^{2}\\
 & =\frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)2\pi}\int_{0}^{\infty}(\sigma^{2})^{-\alpha-2}e^{\frac{-1}{2\sigma^{2}}\left(n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}\int_{-\infty}^{\infty}e^{-\frac{1}{2\sigma^{2}}(x-\mu)^{2}}\mathrm{d}x\mathrm{d}\sigma^{2}\\
 & =\frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)2\pi}\int_{0}^{\infty}(\sigma^{2})^{-\alpha-2}e^{\frac{-1}{2\sigma^{2}}\left(n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}\sigma\sqrt{2\pi}\mathrm{d}\sigma^{2} &  & \text{normal}\\
 & =\frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)\sqrt{2\pi}}\int_{0}^{\infty}(\sigma^{2})^{-\alpha-3/2}e^{\frac{-1}{2\sigma^{2}}\left(n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}\mathrm{d}\sigma^{2}\\
 & =\frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)2\pi}\int_{0}^{\infty}(\sigma^{2})^{-(\alpha+1/2)-1}e^{\frac{-1}{\sigma^{2}}\left((n_{0}/2)(\mu-\mu_{0})^{2}+\beta\right)}\mathrm{d}\sigma^{2}\\
 & =\frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)2\pi}\frac{\Gamma(\alpha+1/2)}{((n_{0}/2)(\mu-\mu_{0})^{2}+\beta)^{\alpha+\frac{1}{2}}} &  & \text{inverse gamma}
\end{align*}

\end_inset

We also also calculate
\begin_inset Formula 
\begin{align*}
f(\mu) & =\int_{0}^{\infty}f(\mu|\sigma^{2})f(\sigma^{2})\mathrm{d}\sigma^{2}\\
 & =\int_{0}^{\infty}\left(\frac{\sqrt{n_{0}}}{\sigma\sqrt{2\pi}}e^{\frac{-1}{2\sigma^{2}}n_{0}(\mu-\mu_{0})^{2}}\right)\left(\frac{\beta^{\alpha}}{\Gamma(\alpha)}(\sigma^{2})^{-\alpha-1}e^{-\beta/\sigma^{2}}\right)\mathrm{d}\sigma^{2}\\
 & =\frac{\beta^{\alpha}}{\Gamma(\alpha)}\frac{\sqrt{n_{0}}}{\sqrt{2\pi}}\int_{0}^{\infty}(\sigma^{2})^{-(\alpha+1)-1}\left(e^{\frac{-1}{2\sigma^{2}}(n_{0}(\mu-\mu_{0})^{2}+2\beta)}\right)\mathrm{d}\sigma^{2}\\
 & =\frac{\beta^{\alpha}}{\Gamma(\alpha)}\frac{\sqrt{n_{0}}}{\sqrt{2\pi}}\frac{2^{\alpha+1}\Gamma(\alpha+1)}{\left(n_{0}(\mu-\mu_{0})^{2}+2\beta\right)^{\alpha+1}}\\
 & =\sqrt{\frac{2n_{0}}{\pi}}\frac{(2\beta)^{\alpha}(\alpha+1)}{\left(n_{0}(\mu-\mu_{0})^{2}+2\beta\right)^{\alpha+1}}\\
 & =\sqrt{\frac{2n_{0}}{\pi}}\frac{(\nu_{0}\sigma_{0}^{2})^{\nu_{0}/2}(\nu_{0}/2+1)}{\left(n_{0}(\mu-\mu_{0})^{2}+\nu_{0}\sigma_{0}^{2}\right)^{\nu_{0}/2+1}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We also calculate
\begin_inset Formula 
\begin{align*}
f(x) & =\int_{-\infty}^{\infty}f(x|\mu)f(\mu)\mathrm{d}\mu\\
 & =\int_{-\infty}^{\infty}\int_{0}^{\infty}f(x|\mu,\sigma^{2})f(\mu|\sigma)\mathrm{d}\sigma^{2}\mathrm{d}\mu\\
 & =\int_{-\infty}^{\infty}\int_{0}^{\infty}\frac{1}{\sigma\sqrt{2\pi}}e^{-\frac{1}{2\sigma^{2}}(x-\mu)^{2}}\frac{\sqrt{n_{0}}}{\sigma\sqrt{2\pi}}e^{\frac{-1}{2\sigma^{2}}n_{0}(\mu-\mu_{0})^{2}}\mathrm{d}\sigma^{2}\mathrm{d}\mu\\
 & =\frac{\sqrt{n_{0}}}{2\pi}\int_{0}^{\infty}\int_{-\infty}^{\infty}(\sigma^{2})^{-1}e^{-\frac{1}{2\sigma^{2}}((x-\mu)^{2}+n_{0}(\mu-\mu_{0})^{2})}\mathrm{d}\mu\mathrm{d}\sigma^{2}\\
 & =\frac{\sqrt{n_{0}}}{2\pi}\int_{0}^{\infty}(\sigma^{2})^{-1}e^{-\frac{1}{2\sigma^{2}}(x-\mu)^{2}}\int_{-\infty}^{\infty}e^{-\frac{1}{2\sigma^{2}}(n_{0}(\mu-\mu_{0})^{2})}\mathrm{d}\mu\mathrm{d}\sigma^{2}\\
 & =\frac{\sqrt{n_{0}}}{2\pi}\int_{0}^{\infty}(\sigma^{2})^{-1}e^{-\frac{1}{2\sigma^{2}}(x-\mu)^{2}}\sqrt{2\pi n_{0}}\sigma\mathrm{d}\sigma^{2}\\
 & =\frac{n_{0}}{\sqrt{2\pi}}\int_{0}^{\infty}(\sigma^{2})^{\frac{1}{2}-1}e^{-\frac{1}{2\sigma^{2}}(x-\mu)^{2}}\mathrm{d}\sigma^{2}\\
 & =\frac{n_{0}}{\sqrt{2\pi}}\frac{\Gamma(1/2)}{\left((1/2)(x-\mu)^{2}\right)^{1/2}}\\
 & =\frac{n_{0}}{x-\mu}.
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection*
Problem 3.c
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
f(\sigma^{2}|x) & =\frac{f(x,\mu,\sigma^{2})}{f(\mu|x,\sigma^{2})f(x)}\\
 & =\frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)2\pi}(\sigma^{2})^{-\alpha-2}e^{-\frac{1}{2\sigma^{2}}\left((x-\mu)^{2}+n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}\sqrt{\frac{2\pi}{n_{0}}}\frac{\Gamma(\alpha)}{\beta^{\alpha}}\frac{\Gamma(\alpha+1/2)}{((n_{0}/2)(\mu-\mu_{0})^{2}+\beta)^{\alpha+\frac{1}{2}}}\frac{x-\mu}{n_{0}}\\
 & =\frac{x-\mu}{n_{0}\sqrt{2\pi}}\frac{\Gamma(\alpha)\Gamma(\alpha+1/2)}{\beta^{\alpha}((n_{0}/2)(\mu-\mu_{0})^{2}+\beta)^{\alpha+\frac{1}{2}}}(\sigma^{2})^{-\alpha-2}e^{-\frac{1}{2\sigma^{2}}\left((x-\mu)^{2}+n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}.
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection*
Problem 3.d
\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
f(\mu|\mathbf{x}) & =\frac{f(\mathbf{x}|\mu)f(\mu)}{f(\mathbf{x})}\\
 & =\frac{(x-\mu)}{n_{0}}\\
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
f(\mu|\mathbf{x}) & =\int_{0}^{\infty}f(\mu|\mathbf{x},\sigma^{2})\mathrm{d}\sigma^{2}\\
 & =\int_{0}^{\infty}\frac{f(x)f(\sigma^{2}|x)}{f(x,\mu,\sigma^{2})}\mathrm{d}\sigma^{2}\\
 & =\int_{0}^{\infty}\frac{f(x)f(\sigma^{2}|x)}{f(x,\mu,\sigma^{2})}\mathrm{d}\sigma^{2}\\
 & =\frac{2\pi\Gamma(\alpha)^{2}\Gamma(\alpha+1/2)n_{0}}{\beta^{2\alpha}((n_{0}/2)(\mu-\mu_{0})^{2}+\beta)^{\alpha+\frac{1}{2}}(x-\mu)\sqrt{n_{0}}}\int_{0}^{\infty}(\sigma^{2})^{-\alpha-2}e^{-\frac{1}{2\sigma^{2}}\left((x-\mu)^{2}+n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}\mathrm{d}\sigma^{2}\\
 & =\frac{2\pi\Gamma(\alpha)^{2}\Gamma(\alpha+1/2)n_{0}}{\beta^{2\alpha}((n_{0}/2)(\mu-\mu_{0})^{2}+\beta)^{\alpha+\frac{1}{2}}(x-\mu)\sqrt{n_{0}}}\int_{0}^{\infty}(\sigma^{2})^{-\alpha-2}e^{-\frac{1}{2\sigma^{2}}\left((x-\mu)^{2}+n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}\mathrm{d}\sigma^{2}\\
\\
\\
 & \frac{\beta^{\alpha}\sqrt{n_{0}}}{\Gamma(\alpha)2\pi}(\sigma^{2})^{-\alpha-2}e^{-\frac{1}{2\sigma^{2}}\left((x-\mu)^{2}+n_{0}(\mu-\mu_{0})^{2}+2\beta\right)}
\end{align*}

\end_inset


\end_layout

\begin_layout Section*
Problem 4
\end_layout

\begin_layout Subsection*
Problem 4.a
\end_layout

\begin_layout Standard
Denote 
\begin_inset Formula $p=p_{1}$
\end_inset

 and 
\begin_inset Formula $q=p_{2}$
\end_inset

 and denote
\begin_inset Formula 
\begin{align*}
f_{X,Y}(0,0) & =p_{00}\\
f_{X,Y}(0,1) & =p_{01}\\
f_{X,Y}(1,0) & =p_{10}\\
f_{X,Y}(1,1) & =p_{11}.
\end{align*}

\end_inset

So we must have
\begin_inset Formula 
\begin{align*}
p_{00}+p_{01}+p_{10}+p_{11} & =1\\
p_{01}+p_{11} & =q\\
p_{10}+p_{11} & =p
\end{align*}

\end_inset

In particular, as soon as we choose what 
\begin_inset Formula $p_{11}$
\end_inset

 is, the rest of the probabilities are immediately determined.
 Now note that 
\begin_inset Formula $p_{11}\leq\min(p,q)$
\end_inset

.
 Indeed, we have 
\begin_inset Formula $p_{11}\leq p_{10}+p_{11}=p$
\end_inset

 and 
\begin_inset Formula $p_{11}\leq p_{01}+p_{11}=q$
\end_inset

.
 Also, equality can be acheived with (assuming without loss of generality
 that 
\begin_inset Formula $p\leq q$
\end_inset

) then 
\begin_inset Formula $p_{11}=p$
\end_inset

, 
\begin_inset Formula $p_{10}=0$
\end_inset

, 
\begin_inset Formula $p_{00}=1-q$
\end_inset

, and 
\begin_inset Formula $p_{01}=q-p$
\end_inset

.
 A similar argument shows that we can have 
\begin_inset Formula $p_{11}=0$
\end_inset

 (but not 
\begin_inset Formula $\leq$
\end_inset

).
 Thus 
\begin_inset Formula 
\[
0\leq p_{11}\leq\min(p,q).
\]

\end_inset

With this understood, we have
\begin_inset Formula 
\begin{align*}
\rho & =\frac{\mathrm{Cov}(X,Y)}{\sigma_{X}\sigma_{Y}}\\
 & =\frac{p_{11}^{2}-pq}{\sqrt{p(1-p)q(1-q)}}
\end{align*}

\end_inset

In particular, 
\begin_inset Formula $\rho$
\end_inset

 is a quadratic function 
\begin_inset Formula $p_{11}$
\end_inset

, which is increasing from 
\begin_inset Formula $p_{11}=0$
\end_inset

 to 
\begin_inset Formula $p_{11}=\min(p,q)$
\end_inset

.
 If 
\begin_inset Formula $p_{11}=0$
\end_inset

, then the correlation between 
\begin_inset Formula $X$
\end_inset

 and 
\begin_inset Formula $Y$
\end_inset

 attains its lowest value, namely 
\begin_inset Formula 
\[
-\frac{pq}{\sqrt{pq(1-p)(1-q)}},
\]

\end_inset

and if 
\begin_inset Formula $p_{11}=\min(p,q)$
\end_inset

, then the correlation between 
\begin_inset Formula $X$
\end_inset

 and 
\begin_inset Formula $Y$
\end_inset

 attains its maximum value, namely 
\begin_inset Formula 
\[
\frac{\min(p,q)-pq}{\sqrt{pq(1-p)(1-q)}}.
\]

\end_inset

.
 
\end_layout

\begin_layout Subsection*
Problem 4.b
\end_layout

\begin_layout Standard
Without loss of generality, assume that 
\begin_inset Formula $p\leq q$
\end_inset

.
 In order for 
\begin_inset Formula $\rho=1$
\end_inset

 we need
\begin_inset Formula 
\begin{align*}
1=\frac{p-pq}{\sqrt{pq(1-p)(1-q)}} & \iff p-pq=\sqrt{pq(1-p)(1-q)}\\
 & \iff p^{2}(1-q)^{2}=pq(1-p)(1-q)\\
 & \iff p(1-q)=q(1-p)\\
 & \iff p-pq=q-qp\\
 & \iff p=q.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
In order for 
\begin_inset Formula $\rho=-1$
\end_inset

, we need
\begin_inset Formula 
\begin{align*}
-1=\frac{-pq}{\sqrt{pq(1-p)(1-q)}} & \iff pq=\sqrt{pq(1-p)(1-q)}\\
 & \iff p^{2}q^{2}=pq(1-p)(1-q)\\
 & \iff pq=(1-p)(1-q)\\
 & \iff pq=1-p-q+pq\\
 & \iff0=1-p-q\\
 & \iff1=p+q
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection*
Problem 5
\end_layout

\begin_layout Standard
Observe that
\begin_inset Formula 
\begin{align*}
1 & =\mathrm{E}\left(1\right)\\
 & =\mathrm{E}\left(\frac{X_{1}+\cdots+X_{n}}{X_{1}+\cdots+X_{n}}\right)\\
 & =\mathrm{E}\left(\frac{X_{1}}{X_{1}+\cdots+X_{n}}\right)+\cdots+\mathrm{E}\left(\frac{X_{n}}{X_{1}+\cdots+X_{n}}\right)\\
 & =n\mathrm{E}\left(\frac{X_{1}}{X_{1}+\cdots+X_{n}}\right)
\end{align*}

\end_inset

implies 
\begin_inset Formula 
\begin{align*}
\mathrm{E}\left(\frac{X_{1}}{X_{1}+\cdots+X_{n}}\right) & =\frac{1}{n}.
\end{align*}

\end_inset


\end_layout

\begin_layout Section*
Problem 6
\end_layout

\begin_layout Standard
By Markov's inequality, we have
\begin_inset Formula 
\begin{align*}
\mathrm{pr}(X\neq0) & =\mathrm{pr}(X\geq1)\\
 & \leq\mathrm{E}(X).
\end{align*}

\end_inset

Also Jensen's inequality tells us that 
\begin_inset Formula 
\[
\mathrm{E}(X|X\neq0)^{2}\leq\mathrm{E}(X^{2}|X\neq0).
\]

\end_inset

Thus
\begin_inset Formula 
\begin{align*}
\mathrm{E}(X|X\neq0)^{2} & =\left(\sum_{n=0}^{\infty}n\mathrm{pr}(X=n|X\neq0)\right)^{2}\\
 & =\left(\sum_{n=0}^{\infty}n\frac{\mathrm{pr}(X=n)}{\mathrm{pr}(X\neq0)}\right)^{2}\\
 & =\frac{\mathrm{E}(X)^{2}}{\mathrm{pr}(X\neq0)^{2}}.
\end{align*}

\end_inset

Similarly, 
\begin_inset Formula 
\begin{align*}
\mathrm{E}(X^{2}|X\neq0) & =\sum_{n=0}^{\infty}n^{2}\mathrm{pr}(X=n|X\neq0)\\
 & =\sum_{n=1}^{\infty}n^{2}\frac{\mathrm{pr}(X=n)}{\mathrm{pr}(X\neq0)}\\
 & =\frac{\mathrm{E}(X^{2})}{\mathrm{pr}(X\neq0)}.
\end{align*}

\end_inset

Therefore we have
\begin_inset Formula 
\begin{align*}
\frac{\mathrm{E}(X)^{2}}{\mathrm{E}(X^{2})} & \leq\mathrm{pr}(X\neq0).
\end{align*}

\end_inset


\end_layout

\begin_layout Section*
Problem 7
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f_{\mathbf{X}}(\mathbf{x})=\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}e^{-\frac{1}{2}(\mathbf{x}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}-\boldsymbol{\mu})}
\]

\end_inset


\end_layout

\begin_layout Subsection*
Problem 7.a
\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
M_{\mathbf{X}}(\mathbf{t}) & =\mathrm{E}\left(e^{\mathbf{t}^{\top}\mathbf{X}}\right)\\
 & =\int_{\mathbb{R}^{n}}e^{\mathbf{t}^{\top}\mathbf{x}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}e^{-\frac{1}{2}(\mathbf{x}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}-\boldsymbol{\mu})}\mathrm{d}\mathbf{x}\\
 & =\int_{\mathbb{R}^{n}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}e^{\mathbf{t}^{\top}\mathbf{x}-\frac{1}{2}(\mathbf{x}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}-\boldsymbol{\mu})}\mathrm{d}\mathbf{x}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\int_{\mathbb{R}^{n}}e^{\mathbf{t}^{\top}\mathbf{u}-\frac{1}{2}\mathbf{u}^{\top}\boldsymbol{\Sigma}^{-1}\mathbf{u}}\mathrm{d}\mathbf{u} & \text{change variable }\mathbf{u}=\mathbf{x}-\boldsymbol{\mu}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}\left(\mathbf{u}^{\top}\boldsymbol{\Sigma}^{-1}\mathbf{u}-2\mathbf{t}^{\top}\mathbf{u}\right)}\mathrm{d}\mathbf{u}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}\left(\left(\mathbf{u}-\mathbf{t}\right)^{\top}\boldsymbol{\Sigma}^{-1}\left(\mathbf{u}-\mathbf{t}\right)-\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}\right)}\mathrm{d}\mathbf{u} & \text{complete the square}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}\left(\mathbf{u}-\mathbf{t}\right)^{\top}\boldsymbol{\Sigma}^{-1}\left(\mathbf{u}-\mathbf{t}\right)}\mathrm{d}\mathbf{u}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}\mathbf{v}^{\top}\boldsymbol{\Sigma}^{-1}\mathbf{v}}\mathrm{d}\mathbf{v} & \text{change variable }\mathbf{v}=\mathbf{u}-\mathbf{t}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}\mathbf{v}^{\top}\mathbf{P}^{\top}\mathbf{P}\boldsymbol{\Sigma}^{-1}\mathbf{P}^{\top}\mathbf{P}\mathbf{v}}\mathrm{d}\mathbf{v} & \text{orthogonal diagonalization }\mathbf{P}^{\top}\boldsymbol{\Sigma}^{-1}\mathbf{P}=\boldsymbol{\Lambda}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\det(\Sigma)^{1/2}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}\mathbf{w}^{\top}\boldsymbol{\Lambda}\mathbf{w}}\mathrm{d}\mathbf{w} & \text{change variable }\mathbf{w}=\mathbf{Pv}\text{ }\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}(\lambda_{1}w_{1}^{2}+\cdots+\lambda_{n}w_{n}^{2})}\mathrm{d}w_{n}\cdots\mathrm{d}w_{1}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\sqrt{\lambda_{1}\cdots\lambda_{n}}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}(z_{1}^{2}+\cdots+z_{n}^{2})}\mathrm{d}z_{n}\cdots\mathrm{d}z_{1} & \text{change variable }z_{i}=\frac{w_{i}}{\sqrt{\lambda_{i}}}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}\det(\Sigma)^{1/2}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}(z_{1}^{2}+\cdots+z_{n}^{2})}\mathrm{d}z_{n}\cdots\mathrm{d}z_{1}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}}\int_{\mathbb{R}^{n}}e^{-\frac{1}{2}(z_{1}^{2}+\cdots+z_{n}^{2})}\mathrm{d}z_{n}\cdots\mathrm{d}z_{1}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}}\int_{\mathbb{R}}e^{-\frac{1}{2}z_{1}^{2}}\mathrm{d}z_{1}\int_{\mathbb{R}}e^{-\frac{1}{2}z_{2}^{2}}\mathrm{d}z_{2}\cdots\int_{\mathbb{R}}e^{-\frac{1}{2}z_{n}^{2}}\mathrm{d}z_{n}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}}\frac{1}{(2\pi)^{n/2}}(2\pi)^{n/2}\\
 & =e^{\mathbf{t}^{\top}\boldsymbol{\mu}+\frac{1}{2}\mathbf{t}^{\top}\boldsymbol{\Sigma}\mathbf{t}} & \text{yay!}
\end{align*}

\end_inset

where we were able to complete the square and apply the real spectral theorem
 because the matrix 
\begin_inset Formula $\boldsymbol{\Sigma}$
\end_inset

 is symmetric.
 Indeed, for 
\begin_inset Formula $i\neq j$
\end_inset

 we have
\begin_inset Formula 
\begin{align*}
\mathrm{Cov}(X_{i},X_{j}) & =\mathrm{E}(X_{i}X_{j})-\mathrm{E}(X_{i})\mathrm{E}(X_{j})\\
 & =\mathrm{E}(X_{j}X_{i})-\mathrm{E}(X_{j})\mathrm{E}(X_{i})\\
 & =\mathrm{Cov}(X_{j},X_{i}).
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection*
Problem 7.b 
\end_layout

\begin_layout Standard
Note that
\begin_inset Formula 
\begin{align*}
M_{\mathbf{Y}}(\mathbf{t}) & =\mathrm{E}\left(e^{\mathbf{t}^{\top}\mathbf{Y}}\right)\\
 & =\mathrm{E}\left(e^{\mathbf{t}^{\top}(\mathbf{AX+b})}\right)\\
 & =e^{\mathbf{t}^{\top}\mathbf{b}}\mathrm{E}\left(e^{\mathbf{t}^{\top}\mathbf{AX}}\right)\\
 & =e^{\mathbf{t}^{\top}\mathbf{b}}\mathrm{E}\left(e^{(\mathbf{A}^{\top}\mathbf{t})^{\top}X}\right)\\
 & =e^{\mathbf{t}^{\top}\mathbf{b}}M_{\mathbf{X}}(\mathbf{A}^{\top}\mathbf{t})\\
 & =e^{\mathbf{t}^{\top}\mathbf{b}}e^{\mathbf{(\mathbf{A}^{\top}\mathbf{t})}^{\top}\boldsymbol{\mu}+\frac{1}{2}(\mathbf{A}^{\top}\mathbf{t})^{\top}\boldsymbol{\Sigma}(\mathbf{A}^{\top}\mathbf{t})}\\
 & =e^{\mathbf{t}^{\top}(\mathbf{b+A\boldsymbol{\mu}})+\frac{1}{2}\mathbf{t}^{\top}\mathbf{A}\boldsymbol{\Sigma}\mathbf{A}^{\top}\mathbf{t}}.
\end{align*}

\end_inset

Thus 
\begin_inset Formula $\mathbf{Y}\sim\mathrm{MVN}(\mathbf{b}+\mathbf{A}\boldsymbol{\mu},\mathbf{A}\boldsymbol{\Sigma}\mathbf{A}^{\top})$
\end_inset

.
 
\end_layout

\begin_layout Subsection*
Problem 7.c
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\mathbf{A}$
\end_inset

 be the 
\begin_inset Formula $p\times p$
\end_inset

 matrix with with 
\begin_inset Formula $1$
\end_inset

's for its first 
\begin_inset Formula $p$
\end_inset

 diagonal entries and 
\begin_inset Formula $0$
\end_inset

's everywhere else.
 Then by problem 7.b, we have
\begin_inset Formula 
\[
\mathbf{X}_{1}=\mathbf{AX}\sim\mathrm{MVN}(\mathbf{A}\boldsymbol{\mu},\mathbf{A}\boldsymbol{\Sigma}\mathbf{A}^{\top})=\mathrm{MVN}(\boldsymbol{\mu}_{1},\boldsymbol{\Sigma}_{1})
\]

\end_inset

where 
\begin_inset Formula $\boldsymbol{\mu}_{1}=(\mu_{1},\dots,\mu_{p},0\dots,0)^{\top}$
\end_inset

 and
\begin_inset Formula 
\[
\boldsymbol{\Sigma_{1}}=\sum_{\substack{1\leq i,j\leq p}
}\sigma_{ij}\mathbf{E}_{ij},
\]

\end_inset

where 
\begin_inset Formula $\mathbf{E}_{ij}$
\end_inset

 denotes the elementary matrix with 
\begin_inset Formula $1$
\end_inset

 in the 
\begin_inset Formula $i$
\end_inset

,
\begin_inset Formula $j$
\end_inset

 entry and 
\begin_inset Formula $0$
\end_inset

 everywhere else and where 
\begin_inset Formula $\boldsymbol{\Sigma}=(\sigma_{ij})$
\end_inset

.
 Similarly, the distribution of 
\begin_inset Formula $\mathbf{X}_{2}$
\end_inset

 is 
\begin_inset Formula $\mathrm{MVN}(\boldsymbol{\mu}_{2},\boldsymbol{\Sigma}_{2})$
\end_inset

 where 
\begin_inset Formula $\boldsymbol{\mu}_{1}=(0,\dots,0,\mu_{p+1},\dots,\mu_{n})^{\top}$
\end_inset

 and where
\begin_inset Formula 
\[
\boldsymbol{\Sigma_{2}}=\sum_{\substack{p+1\leq i,j\leq n}
}\sigma_{ij}\mathbf{E}_{ij}.
\]

\end_inset


\end_layout

\begin_layout Standard
The conditional distribution of 
\begin_inset Formula $\mathbf{X}_{2}$
\end_inset

 given 
\begin_inset Formula $\mathbf{X}_{1}$
\end_inset

 is
\begin_inset Formula 
\begin{align*}
f(\mathbf{x}_{2}|\mathbf{x}_{1}) & =f(x_{p+1},\dots,x_{n}|x_{1},\dots,x_{p})\\
 & =\frac{f(x_{1},\dots,x_{n})}{f(x_{1},\dots,x_{p})}\\
 & =\frac{f(\mathbf{x})}{f(\mathbf{x}_{1})}\\
 & =\frac{1}{(2\pi)^{n/2}\det(\Sigma)^{1/2}}e^{-\frac{1}{2}(\mathbf{x}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}-\boldsymbol{\mu})}(2\pi)^{n/2}\det(\Sigma_{1})^{1/2}e^{\frac{1}{2}(\mathbf{x}_{1}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}_{1}-\boldsymbol{\mu})}\\
 & =\frac{\det(\Sigma_{1})^{1/2}}{\det(\Sigma)^{1/2}}e^{-\frac{1}{2}(\mathbf{x}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}-\boldsymbol{\mu})+\frac{1}{2}(\mathbf{x}_{1}-\boldsymbol{\mu}_{1})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}_{1}-\boldsymbol{\mu}_{1})}\\
 & =\frac{\det(\Sigma_{1})^{1/2}}{\det(\Sigma)^{1/2}}e^{-\frac{1}{2}(\mathbf{x}-\boldsymbol{\mu})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}-\boldsymbol{\mu})+\frac{1}{2}(\mathbf{x}_{1}-\boldsymbol{\mu}_{1})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}_{1}-\boldsymbol{\mu}_{1})}\\
 & =\frac{\det(\Sigma_{1})^{1/2}}{\det(\Sigma)^{1/2}}e^{-\frac{1}{2}\left((\mathbf{x}-\boldsymbol{\mu}-\mathbf{x}_{1}+\boldsymbol{\mu}_{1})^{\top}\boldsymbol{\Sigma}^{-1}(\mathbf{x}-\boldsymbol{\mu}-\mathbf{x}_{1}+\boldsymbol{\mu}_{1})\right)}\\
 & =\frac{\det(\Sigma_{1})^{1/2}}{\det(\Sigma)^{1/2}}e^{-\frac{1}{2}\left((\mathbf{x}-\mathbf{x}_{1})-\boldsymbol{\mu}_{2})^{\top}\boldsymbol{\Sigma}^{-1}((\mathbf{x}-\mathbf{x}_{1})-\boldsymbol{\mu}_{2})\right)}.
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection*
Problem 7.d
\end_layout

\begin_layout Standard
Observe that the vectors 
\begin_inset Formula $(a_{1},\dots,a_{n})^{\top}$
\end_inset

 and 
\begin_inset Formula $(b_{1},\dots,b_{n})^{\top}$
\end_inset

 are 
\emph on
linearly independent 
\emph default
since they are orthongonal with respect to each other.
 In particular, we can an orthogonal 
\begin_inset Formula $n\times n$
\end_inset

 matrix 
\begin_inset Formula $\mathbf{A}$
\end_inset

 whose first two rows correspond to 
\begin_inset Formula $(a_{1},\dots,a_{n})$
\end_inset

 and 
\begin_inset Formula $(b_{1},\dots,b_{n})$
\end_inset

 respectively.
 Denote 
\begin_inset Formula $\mathbf{Y}=\mathbf{A}\mathbf{X}$
\end_inset

.
 Then 
\begin_inset Formula $\mathbf{Y}$
\end_inset

 has an 
\begin_inset Formula $\mathrm{MVN}(\mathbf{A}\boldsymbol{\mu},\mathbf{A}\boldsymbol{\Sigma}\mathbf{A}^{\top})$
\end_inset

 distribution (with its first two components being 
\begin_inset Formula $Y_{1}$
\end_inset

 and 
\begin_inset Formula $Y_{2}$
\end_inset

), and since 
\begin_inset Formula $\boldsymbol{\Sigma}$
\end_inset

 is just a diagonal matrix, we have
\begin_inset Formula 
\begin{align*}
\mathbf{A}\boldsymbol{\Sigma}\mathbf{A}^{\top} & =\mathbf{A}\mathbf{A}^{\top}\boldsymbol{\Sigma}=\Sigma.
\end{align*}

\end_inset

In particular, 
\begin_inset Formula $Y_{1}$
\end_inset

 and 
\begin_inset Formula $Y_{2}$
\end_inset

 are independent.
\end_layout

\end_body
