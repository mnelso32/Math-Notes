\backslash
arrow[dash,ul] 
\backslash
arrow[dash,u] 
\backslash
arrow[dash,ur] 
\backslash
end{tikzcd}
\backslash
end{center}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
